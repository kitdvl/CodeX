#! /bin/bash

if [ $1 == "all" -o $1 == "a32" ]
then
CROSS_COMPILE=yes ARCH_TYPE=a32 OUTPUT_TYPE=STATIC make clean;
CROSS_COMPILE=yes ARCH_TYPE=a32 OUTPUT_TYPE=STATIC make dir;
CROSS_COMPILE=yes ARCH_TYPE=a32 OUTPUT_TYPE=STATIC make all;
fi

if [ $1 == "all" -o $1 == "a64" ]
then
CROSS_COMPILE=yes ARCH_TYPE=a64 OUTPUT_TYPE=STATIC make clean;
CROSS_COMPILE=yes ARCH_TYPE=a64 OUTPUT_TYPE=STATIC make dir;
CROSS_COMPILE=yes ARCH_TYPE=a64 OUTPUT_TYPE=STATIC make all;
fi

if [ $1 == "all" -o $1 == "x32" ]
then
CLFAGS=-m32 CXXFLAGS=-m32 LDFLAGS=-m32 CROSS_COMPILE=no ARCH_TYPE=x32 OUTPUT_TYPE=STATIC make clean;
CLFAGS=-m32 CXXFLAGS=-m32 LDFLAGS=-m32 CROSS_COMPILE=no ARCH_TYPE=x32 OUTPUT_TYPE=STATIC make dir;
CLFAGS=-m32 CXXFLAGS=-m32 LDFLAGS=-m32 CROSS_COMPILE=no ARCH_TYPE=x32 OUTPUT_TYPE=STATIC make all;
fi

if [ $1 == "all" -o $1 == "x64" ]
then
CLFAGS=-m64 CXXFLAGS=-m64 LDFLAGS=-m64 CROSS_COMPILE=no ARCH_TYPE=x64 OUTPUT_TYPE=STATIC make clean;
CLFAGS=-m64 CXXFLAGS=-m64 LDFLAGS=-m64 CROSS_COMPILE=no ARCH_TYPE=x64 OUTPUT_TYPE=STATIC make dir;
CLFAGS=-m64 CXXFLAGS=-m64 LDFLAGS=-m64 CROSS_COMPILE=no ARCH_TYPE=x64 OUTPUT_TYPE=STATIC make all;
fi

